<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/rect_cornor_white1"
              android:orientation="vertical"
              android:paddingBottom="40dp"
              android:paddingLeft="20dp"
              android:paddingRight="50dp"
              android:paddingTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="单号走势"
            android:textColor="@color/textcolor1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/radiobutton_background_unchecked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="个位"
            android:id="@+id/btn_danh_gw"
            android:textColor="@color/main_color"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="多号走势"
            android:textColor="@color/textcolor1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_dh_wx"
            android:background="@drawable/radiobutton_background_unchecked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="五星"
            android:textColor="@color/main_color"
            android:textSize="14sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/radiobutton_background_unchecked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="后二"
            android:id="@+id/btn_dh_he"
            android:textColor="@color/main_color"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="大小单双"
            android:textColor="@color/textcolor1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/radiobutton_background_unchecked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/btn_dxds_sg"
            android:text="十个"
            android:textColor="@color/main_color"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="五星和值"
            android:textColor="@color/textcolor1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/radiobutton_background_unchecked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/btn_wxhz_dxds"
            android:text="大小单双"
            android:textColor="@color/main_color"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>