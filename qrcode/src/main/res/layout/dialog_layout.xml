<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/main_bule_color"
        android:padding="10dp"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"
        android:text="提示内容提示内容提示内容提示内容提示内容提示内容提示内容提示内容"
        android:textColor="@color/gray_35"
        android:textSize="15sp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_cancle"
            style="@style/bottom_white_style"
            android:text="@string/cancel"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/gray_ef"/>

        <TextView
            android:id="@+id/text_ok"
            style="@style/bottom_white_style"
            android:text="@string/str_ok"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ef"/>

</LinearLayout>